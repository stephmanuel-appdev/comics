<!-- Validation failure messages -->
<% if @medium.errors.any? %>
  <% @medium.errors.full_messages.each do |message| %>
    <div class="alert alert-dismissable alert-danger">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
      <%= message %>
    </div>
  <% end %>
<% end %>

<div class="page-header">
  <h3>Edit Medium #<%= @medium.id %></h3>
</div>

<div class="row">
  <div class="col-md-12">
    <form action="/update_medium/<%= @medium.id %>" method="post">
      <!-- Hidden input for authenticity token to protect from forgery -->
      <input name="authenticity_token" type="hidden" value="<%= form_authenticity_token %>">

      <!-- Label and input for name -->
      <div class="form-group">
        <label for="name" class="control-label">
          Name
        </label>

        <input type="text" id="name" name="name" placeholder="Name" class="form-control" value="<%= @medium.name %>">
      </div>

      <!-- Label and input for url -->
      <div class="form-group">
        <label for="url" class="control-label">
          Url
        </label>

        <input type="text" id="url" name="url" placeholder="Url" class="form-control" value="<%= @medium.url %>">
      </div>

      <!-- Label and input for bio -->
      <div class="form-group">
        <label for="bio" class="control-label">
          Bio
        </label>

        <textarea id="bio" name="bio" placeholder="Bio" class="form-control" rows="3"><%= @medium.bio %></textarea>
      </div>

      <!-- Label and input for stage_id -->
      <div class="form-group">
        <label for="stage_id" class="control-label">
          Stage
        </label>

        <%= select_tag(:stage_id, options_from_collection_for_select(Stage.all, :id, :issue_id, @medium.stage_id), :class => "form-control") %>
      </div>

      <button class="btn btn-warning">
        Update Medium
      </button>
      or
      <a href="/media/<%= @medium.id %>">Cancel</a>
    </form>
  </div>
</div>
